# ================================
# üåê Application Settings
# ================================
APP_NAME="AI Aggregator Pro"
APP_VERSION="3.1.0"
ENVIRONMENT=development  # development | staging | production
DEBUG=false

ENABLE_DOCS=true
ENVIRONMENT=development

# ================================
# üóÉÔ∏è Database
# ================================
DATABASE_URL=sqlite+aiosqlite:///./database.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_ECHO=false
DB_QUERY_CACHE_SIZE=1000
DB_CONNECTION_RECYCLE=3600

# ================================
# üîÑ Redis
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_CLUSTER_MODE=false
REDIS_CLUSTER_NODES=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5.0
REDIS_COMPRESSION_THRESHOLD=1024
REDIS_KEY_PREFIX=ai_aggregator:

# ================================
# üîê Security
# ================================
SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=[]
#ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
TRUSTED_HOSTS=[]
#TRUSTED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ================================
# üìà Monitoring
# ================================
MONITORING_ENABLED=true
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Performance alert thresholds
PERF_THRESHOLD_WARNING=5.0          # seconds: warning on slow request
PERF_THRESHOLD_ERROR=30.0           # seconds: error on very slow request

# Prometheus metrics alert thresholds
MONITORING_THRESHOLD_HIGH_LATENCY=5.0             # seconds
MONITORING_THRESHOLD_HIGH_ERROR_RATE=0.1          # ratio (0.1 = 10%)
MONITORING_THRESHOLD_LOW_CACHE_HIT_RATIO=0.7      # ratio (0.7 = 70%)
MONITORING_THRESHOLD_HIGH_AI_COST_HOURLY=50.0     # USD/hour

# Logging
LOG_LEVEL=INFO                     # INFO | DEBUG | WARNING | ERROR
LOG_FORMAT=json                    # json | text

# Tracing
ENABLE_TRACING=false
JAEGER_ENDPOINT=

# ================================
# ü§ñ AI Provider
# ================================
AI_DEFAULT_PROVIDER=ollama
AI_MAX_CONCURRENT=20
AI_REQUEST_TIMEOUT=60
AI_COST_THRESHOLD_DAILY=10.0
AI_COST_THRESHOLD_MONTHLY=300.0
AI_FREE_TIER_PRIORITY=true
AI_AUTO_PROMPT_OPTIMIZATION=true
AI_DYNAMIC_PROVIDER_SELECTION=true

# Provider API Keys
OPENAI_API_KEY=
TOGETHER_API_KEY=
YANDEX_GPT_KEY=
TIBBER_API_KEY=
HUGGINGFACE_API_KEY=
WENXIN_API_KEY=
MOONSHOT_API_KEY=

# ================================
# ‚öôÔ∏è Features
# ================================
ENABLE_WEBSOCKETS=true
ENABLE_GRAPHQL=false
ENABLE_ADMIN_PANEL=true

# ================================
# üöÄ Server
# ================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
